    <!-- JAVASCRIPT สำหรับการทำงานของ TAB และ Mobile Menu -->
    <script>
        // ฟังก์ชันสำหรับสลับการแสดงผลของ Tab Content
        function showTab(tabId, element) {
            // ซ่อน Tab Content ทั้งหมด
            document.querySelectorAll('.tab-content').forEach(function(tab) {
                tab.classList.remove('active');
            });
            // แสดง Tab Content ที่เลือก
            document.getElementById(tabId).classList.add('active');

            // ทำให้เมนูที่เลือกอยู่เป็น Active (เปลี่ยนสี)
            document.querySelectorAll('.nav-link').forEach(function(link) {
                link.classList.remove('active');
            });
            
            // ใช้ querySelectorAll เพื่อให้ครอบคลุมทั้ง desktop และ mobile menu ที่อาจถูกคลิก
            // เราจะหาทุก link ที่มี href ชี้ไปยัง tabId ที่ต้องการ
            document.querySelectorAll('a[href="#' + tabId + '"]').forEach(function(link) {
                link.classList.add('active');
            });

            // เลื่อนหน้าจอไปด้านบนสุด
             window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // การทำงานของ Mobile Menu
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
        });

        function closeMobileMenu() {
             mobileMenu.classList.add('hidden');
        }

        // ทำให้ Tab แรก (HOME) แสดงผลเมื่อเปิดหน้าเว็บ
        document.addEventListener('DOMContentLoaded', function() {
            showTab('home', document.querySelector('.nav-link'));
        });
    </script>

</body>
